<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin">

        <include android:id="@+id/contact_form"
                 layout="@layout/contact_form"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content" android:layout_marginBottom="40dp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:id="@+id/add_contact_button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="@string/add_contact"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:padding="@dimen/padding"
                android:background="@drawable/custombutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:enabled="false"
                android:clickable="false"
                app:layout_constraintTop_toBottomOf="@+id/contact_form"
                android:layout_marginTop="52dp"/>

        <Button
                android:id="@+id/view_contacts_button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="@string/list_of_all_contacts"
                android:textColor="@color/black"
                android:padding="@dimen/padding"
                android:background="@drawable/custombutton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_contact_button"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="52dp"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>