<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/CardView.Light"
        android:id="@+id/contact_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin">

    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/contact_list_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#DE000000"
                android:lineSpacingExtra="8dp"
                android:padding="@dimen/layout_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/contact_email"
                app:layout_constraintEnd_toStartOf="@+id/contact_list_last_name"
                app:layout_constraintBaseline_toBaselineOf="@id/contact_list_last_name"/>

        <TextView
                android:id="@+id/contact_list_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#DE000000"
                android:lineSpacingExtra="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/contact_phone_number"/>

        <TextView
                android:id="@+id/contact_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#DE000000"
                android:lineSpacingExtra="8dp"
                android:layout_marginTop="@dimen/layout_margin"
                android:padding="@dimen/layout_margin"
                app:layout_constraintTop_toBottomOf="@id/contact_list_first_name"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/contact_phone_number"
                app:layout_constraintBaseline_toBaselineOf="@id/contact_phone_number"/>

        <TextView
                android:id="@+id/contact_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#DE000000"
                android:lineSpacingExtra="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact_list_last_name"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>